<h1>Cập nhật giá sản phẩm</h1>

<%= form_for [:admin, @product] do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<%= f.label :name, "Tên sản phẩm" %>
	<%= f.text_field :name, value: @product[:name], class: 'form-control' %>
	
	<%= f.label :price, "Giá sản phẩm" %>
	<%= f.text_field :price, value: @product[:price], class: 'form-control' %>

	<%= f.label :discount, "Giảm gía(%)" %>
	<%= f.text_field :discount, class: 'form-control' %>

	<%= f.text_field :classify, value: @product[:classify]%>
	
	<span class="image">
		<%= f.file_field :image, value: @product[:image ] %>
	</span>

	<%= f.submit "Cập nhật giá sản phẩm" %>

<% end %>