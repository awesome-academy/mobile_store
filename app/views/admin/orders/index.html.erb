<% provide(:title, 'All orders') %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-3">
      <nav class="mb-10 mb-md-0"  style="
    margin-top: 70px;">       
        <div class = "orders"><%= link_to "Các đơn hàng ", user_path(session[:user_id]) %></div>
        <div class="list-group list-group-sm list-group-strong list-group-flush-x">
          <%= link_to "Thêm sản phẩm", new_admin_product_path %>              
        </div>
        <div class="list-group list-group-sm list-group-strong list-group-flush-x">
          <%= link_to "Chỉnh sửa sản phẩm ", admin_products_path %>              
        </div>
      </nav>
    </div>
    <div class="col-12 col-md-9 col-lg-8 offset-lg-1">
        <div class="row">
          <div class="col-12 text-center">
            <h3 class="mb-10">Tất cả các đơn hàng </h3>
          </div>
        </div>
    	
		<ul class="users">
			<% @orders.each do |order| %>
			<%= render order %>
			<% end %>
		</ul>
		

    </div>
  </div>
</div>