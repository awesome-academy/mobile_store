<%= form_for @comment, remote: true do |f| %>
	<div class="field" >
		<%= f.text_area :content, placeholder: "Compose new comment...", class: 'form-control' %>
		<%= f.hidden_field :product_id, value: @comment.product_id %>
	</div>
	
	<div class="add_post" ><%= f.submit "Post", class: " btn-primary cmt btn-lg " %></div>
<% end %>
